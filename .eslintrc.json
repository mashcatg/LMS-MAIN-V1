{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parser": "@babel/eslint-parser",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:next/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [
    "next",
    "react"
  ],
  "rules": {
    "react-hooks/exhaustive-deps": "off", // Manage deps manually
    "@next/next/no-img-element": "off", // Allow <img> tags
    "react/no-unescaped-entities": "off", // Allow unescaped entities in JSX
    "react/jsx-key": "off", // Disable key checks temporarily
    "no-unused-vars": "warn", // Warn for unused vars
    "react/prop-types": "off", // Disable prop-types checks
    "import/no-unresolved": "off", // Bypass unresolved imports
    "no-console": "warn", // Warn on console logs
    "react/react-in-jsx-scope": "off" // Not needed with React 17+
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}